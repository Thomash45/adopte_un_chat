<header class="section-header">
    <nav class="navbar navbar-top navbar-expand-lg navbar-dark bg-secondary">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExample07">
                <ul class="navbar-nav mr-auto">
                    <li><a href="#" class="nav-link"> <i class="fab fa-facebook"></i> </a></li>
                    <li><a href="#" class="nav-link"> <i class="fab fa-instagram"></i> </a></li>
                    <li><a href="#" class="nav-link"> <i class="fab fa-twitter"></i> </a></li>
                    <li><a href="#" class="nav-link"> Déposer une annonce </a></li>
                    <li><a href="#" class="nav-link"> Demandes </a></li>
                </ul>
            </div> <!-- collapse.// -->
        </div>
    </nav>
    <section class="header-main shadow-sm">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-2 col-sm-2">
                    <div class="brand-wrap"><a href="/">
                        <img class="logo" src="{{ asset('images/cat.png') }}">
                        <h2 class="logo-text">Le Bon Chat</h2></a>
                    </div> <!-- brand-wrap.// -->
                </div>
                <div class="col-lg-6 col-xl-6 col-sm-8 ">
                    {{ render(controller(

                        'App\\Controller\\SearchController::searchBar'

                    )) }}
                </div> <!-- col.// -->

                <div class="col-lg-4 col-xl-4 col-sm-12">
                    <div class="widgets-wrap float-right">
                        <a href="#" class="widget-header mr-3">
                            <div class="icontext">
                                <div class="icon-wrap"><i class="icon-sm round border fa fa-heart"></i></div>
                                <div class="text-wrap">
                                    <span class="small badge badge-danger">0</span>
                                    <div>Favoris</div>
                                </div>
                            </div>
                        </a>
                        <div class="widget-header dropdown">
                            <a href="#" data-toggle="dropdown" data-offset="20,10">
                                <div class="icontext">
                                    <div class="icon-wrap"><i class="icon-sm round border fa fa-user"></i></div>
                                    <div class="text-wrap">
                                        {% if not is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN')  %} <small>Connexion | Inscription</small> {% endif %}
                                        {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN')  %}{{ app.user.username }} {% endif %}
                                        <div>Mon compte <i class="fa fa-caret-down"></i> </div>
                                    </div>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                {% if not is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
                                <form class="px-4 py-3" action="{{ path('security_login') }}" method="post">
                                    <div class="form-group">
                                        <label for="username">Utilisateur</label>
                                        <input type="text" id="username" name="_username" value="" class="form-control"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Mot de passe</label>
                                        <input type="password" id="password" name="_password" class="form-control" />
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                    <button type="submit" class="btn btn-warning btn-block">Sign in</button>
                                </form>
                                    <hr class="dropdown-divider">
                                    <div class="col-md-12 text-right textvisible">
                                        <a class="small" href="{{ path('user_registration') }}">Créer un compte </a>|
                                        <a class="small" href="#"> Mot de passe oublié</a>
                                    </div>
                                {% endif %}
                                {% if is_granted('ROLE_USER') %}

                                    <img  class="ml-4 "src="{{asset('images/chatordi1.png')}}" width="45px" height="45px"><span class="ml-3"><b>Espace utilisateur</b></span>
                                    <hr class="dropdown-divider">
                                    <a class="dropdown-item" href="{{ path('announce_new') }}">Déposer une nouvelle annonce</a>
                                    <a class="dropdown-item" href="{{ path('announce_index') }}">Voir mes annonces</a>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a class="dropdown-item" href="">Valider annonces</a>
                                        <a class="dropdown-item" href="">Créer utilisateurs</a>
                                        <a class="dropdown-item" href="">Editer/Supprimer utilisateurs</a>
                                        <a class="dropdown-item" href="">Créer articles</a>
                                        <a class="dropdown-item" href="">Editer/Supprimer articles</a>
                                    {% endif %}
                                    <a class="dropdown-item" href="">Modifier mon profil</a>
                                    <hr class="dropdown-divider">
                                    <a class="btn btn-danger btn-block" href="/logout">Deconnexion</a>
                                {% endif %}

                            </div> <!--  dropdown-menu .// -->
                        </div>  <!-- widget-header .// -->
                    </div> <!-- widgets-wrap.// -->
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- container.// -->
    </section> <!-- header-main .// -->
</header> <!-- section-header.// -->