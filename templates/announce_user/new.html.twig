    <script>

        $('#announce_adresse').attr('id', 'autocomplete');
        $('#announce_city').attr('id', 'locality');
        $('#announce_region').attr('id', 'administrative_area_level_1');
        $('#announce_codePostal').attr('id', 'postal_code');
