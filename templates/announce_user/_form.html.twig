    {{ form_row(form.streetNumber) }}
    {{ form_row(form.city) }}
    {{ form_row(form.codePostal) }}
    {{ form_row(form.departement) }}
    {{ form_row(form.region) }}
    {{ form_row(form.country) }}


{{ form_end(form) }}

</div>